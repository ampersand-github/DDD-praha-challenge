{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"src/test/**/*.ts\" \"prisma/**/*.ts\" ",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test,prisma}/**/*.ts\" --fix",
    "test": "jest --forceExit --detectOpenHandles --runInBand",
    "test:watch": "jest --watch  --forceExit --detectOpenHandles --runInBand",
    "test:cov": "jest --coverage  --forceExit --detectOpenHandles --runInBand",
    "test:debug": "jest --verbose - --forceExit --detectOpenHandles --runInBand",
    "test:e2e": "jest --config src/test/jest-e2e.json",
    "db:migration:model": "prisma migrate dev",
    "db:migration:seed": "prisma db seed",
    "db:reset:withData": "echo y | prisma migrate reset",
    "db:reset:withoutData": "echo y | prisma migrate reset --skip-seed"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/core": "^7.6.15",
    "@nestjs/platform-express": "^7.6.15",
    "@types/faker": "^5.5.2",
    "@types/lodash.isequal": "^4.5.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "shallow-equal-object": "^1.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@prisma/client": "^2.22.1",
    "@types/clone": "^2.1.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "clone": "^1.0.4",
    "deep-equal": "^2.0.5",
    "eslint": "^7.25.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "prisma": "^2.22.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3",
    "uuid": "^8.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/domain/**/*.(t|j)s",
      "<rootDir>/usecase/**/*.(t|j)s",
      "<rootDir>/infra/db/repository/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
